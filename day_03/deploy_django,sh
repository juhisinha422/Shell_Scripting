#!/bin/bash

# Function to clone the Django app code
code_clone() {
    echo "Cloning the Django app..."
    if [ -d "django-notes-app" ]; then
        echo "The code directory already exists. Skipping clone."
    else
        git clone https://github.com/LondheShubham153/django-notes-app.git || {
            echo "‚ùå Failed to clone the code."
            return 1
        }
    fi
    cd django-notes-app || {
        echo "‚ùå Failed to enter code directory."
        return 1
    }
}

# Function to install Docker and Docker Compose
install_requirements() {
    echo "Installing Docker and Docker Compose..."

    sudo apt-get update
    sudo apt-get install -y \
        ca-certificates \
        curl \
        gnupg \
        lsb-release \
        nginx || return 1

    sudo mkdir -p /etc/apt/keyrings
    curl -fsSL https://download.docker.com/linux/ubuntu/gpg | sudo gpg --dearmor -o /etc/apt/keyrings/docker.gpg

    echo \
      "deb [arch=$(dpkg --print-architecture) signed-by=/etc/apt/keyrings/docker.gpg] https://download.docker.com/linux/ubuntu \
      $(lsb_release -cs) stable" | sudo tee /etc/apt/sources.list.d/docker.list > /dev/null

    sudo apt-get update
    sudo apt-get install -y docker-ce docker-ce-cli containerd.io docker-compose-plugin || {
        echo "‚ùå Failed to install Docker or Compose."
        return 1
    }
}

# Function to restart services
required_restarts() {
    echo "Restarting services..."
    sudo systemctl enable docker
    sudo systemctl restart docker
    sudo systemctl enable nginx
    sudo systemctl restart nginx
}

# Function to deploy the app using docker-compose
deploy() {
    echo "Deploying the Django app with Docker Compose..."

    if [ ! -f docker-compose.yml ]; then
        echo "‚ùå docker-compose.yml not found!"
        return 1
    fi

    # Stop any existing containers
    sudo docker compose down

    # Build and run containers
    sudo docker compose up --build -d || {
        echo "‚ùå Docker Compose up failed."
        return 1
    }
}

# Main
echo "********** DEPLOYMENT STARTED **********"

if ! code_clone; then exit 1; fi
if ! install_requirements; then exit 1; fi
if ! required_restarts; then exit 1; fi
if ! deploy; then
    echo "üö´ Deployment failed. Please notify admin."
    exit 1
fi

echo "‚úÖ Deployment complete at http://localhost:8000"
